<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/pojazdObraz"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/obraz_pojazdu" />

        <TextView
            android:id="@+id/nazwaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/pojazdObraz"
            android:textColor="@color/text"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ikonaVmax"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/nazwaText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/ikona_vmax"
            android:scaleType="fitStart"
            android:src="@drawable/ic_vmax"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/vmaxText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/nazwaText"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/pojazdObraz"
            android:layout_toEndOf="@id/ikonaVmax"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ikonaVmaxFmk"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/vmaxText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/ikona_vmax"
            android:scaleType="fitStart"
            android:src="@drawable/ic_vmax"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/fmk"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/vmaxText"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ikonaVmaxFmk"
            android:gravity="bottom"
            android:text="@string/fmk"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/vmaxTuneText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/vmaxText"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/pojazdObraz"
            android:layout_toEndOf="@id/fmk"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ikonaPodatek"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/ikonaVmaxFmk"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/ikona_dolara"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_dollar_2" />

        <TextView
            android:id="@+id/podatek"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@id/ikonaVmaxFmk"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/ikonaPodatek"
            android:gravity="bottom"
            android:text="@string/podatek"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/podatekText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/ikonaVmaxFmk"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@id/pojazdObraz"
            android:layout_toEndOf="@id/podatek"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ikonaZerowanie"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/podatekText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/ikona_dolara"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_dollar_2" />

        <TextView
            android:id="@+id/zerowanie"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@id/podatekText"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ikonaZerowanie"
            android:gravity="bottom"
            android:text="@string/zerowanie"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/zerowanieText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/podatekText"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/pojazdObraz"
            android:layout_toEndOf="@id/zerowanie"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ikonaCena"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/zerowanieText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/ikona_dolara"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_dollar_2" />

        <TextView
            android:id="@+id/cena_katalogowa"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@id/zerowanieText"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ikonaCena"
            android:gravity="bottom"
            android:text="@string/cena_katalogowa"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/cenaText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/zerowanieText"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/cena_katalogowa"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wizuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cenaText"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/tuning_wizualny"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>