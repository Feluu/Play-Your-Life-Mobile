<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pojazdObraz"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="-10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/obraz_pojazdu"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/nazwaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pojazdObraz"
                android:layout_marginTop="17dp"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="27sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/nazwaText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/firstLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/cardBackgroundColorSecond"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp">

                                <ImageView
                                    android:id="@+id/ikonaCena"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/ikona_dolara"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_dollar_2"
                                    app:tint="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/cena"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ikonaCena"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="bottom"
                                    android:text="@string/cena"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:id="@+id/cenaText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/cena"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/cardBackgroundColorSecond"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp">

                                <ImageView
                                    android:id="@+id/ikonaMiejsce"
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/ikona_miejsca"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/ic_map_marker"
                                    app:tint="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/miejsce"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ikonaMiejsce"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="bottom"
                                    android:text="@string/miejsce"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    android:id="@+id/miejsceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/miejsce"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/text"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/cardBackgroundColorSecond"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:id="@+id/ikonaInfo"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/ikona_info"
                                android:scaleType="fitStart"
                                android:src="@drawable/ic_info"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/dodInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ikonaInfo"
                                android:layout_centerHorizontal="true"
                                android:text="@string/dodatkowe_informacje"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/dodatkowe_infoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dodInfo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:textAlignment="center"
                                android:textColor="@color/text"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>