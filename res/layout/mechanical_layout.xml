<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:clipChildren="false"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:contentDescription="@string/layout_null"
                android:rotation="70"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_build" />

            <TextView
                android:id="@+id/wheelsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/mk1_mechanical_name"
                android:textColor="?attr/textDark"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAllows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wheelsName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/layout_allows"
                android:textColor="?attr/textLight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/allows"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewAllows"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:textColor="?attr/textLight"
                android:text="@string/mk1_allows" />

            <ImageView
                android:id="@+id/imageViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allows"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/layout_price_l"
                android:tint="?attr/textDark"
                app:srcCompat="@drawable/ic_earnings_24dp" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allows"
                android:layout_alignParentStart="true"
                android:layout_marginStart="43dp"
                android:layout_marginTop="19dp"
                android:text="@string/layout_price_l"
                android:textColor="?attr/textDark"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/allows"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="5dp"
                android:text="@string/mk1_price"
                android:textColor="?attr/textLight"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageViewReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/layout_dem"
                android:tint="?attr/textDark"
                app:srcCompat="@drawable/ic_earnings_24dp" />

            <TextView
                android:id="@+id/textViewReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="43dp"
                android:layout_marginTop="14dp"
                android:text="@string/layout_dem"
                android:textColor="?attr/textDark"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="98dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/mk1_demont"
                android:textColor="?attr/textLight"
                android:textSize="15sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
