<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feluu.pylife">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CarsListActivity"
            android:label="@string/cars_list_activity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".MechanicalTuneActivity"
            android:label="@string/mechanical_list_activity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".LightsTuneActivity"
            android:label="@string/lights_list_activity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".WheelsTuneActivity"
            android:label="@string/wheels_list_activity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".CountersTuneActivity"
            android:label="@string/counters_list_activity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".CasualJobsActivity"
            android:label="@string/casual_jobs_activity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
    </application>

</manifest>
